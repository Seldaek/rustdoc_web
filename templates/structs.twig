{% extends 'element.twig' %}

{% block definition %}

{% if element.type == 'Plain' %}
<pre>
struct {{ element.name }} {
{% for field in element.fields %}
    {{ field.name }} {{ short_type(field.type) }};
{% endfor %}
}
</pre>
{% elseif element.type == 'Tuple' %}
    <pre>struct {{ element.name }}({% for field in element.fields %}{{ short_type(field.type) }}{% if not loop.last %}, {% endif %}{% endfor %})</pre>
{% elseif element.type == 'Unit' %}
    <pre>struct {{ element.name }};</pre>
{% else %}
    <pre>Unkwown struct type: {{ element.type }}</pre>
{% endif %}

{% endblock %}
