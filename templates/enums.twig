{% extends 'element.twig' %}

{% block definition %}
<h2>Definition</h2>
<pre class="{{ type }}">
enum {{ element.name }}{{ render_generics(element, type_tree) }} {
{% for variant in element.inner.fields[0].variants %}
    {{ variant.name }}{{ short_enum_type(variant.inner.fields[0].kind, type_tree) }},
{% endfor %}
}
</pre>
{% endblock %}

{% block extra %}
    <h2>Variants</h2>
    <table>
        {% for variant in element.inner.fields[0].variants %}
            <tr>
                <td>{{ variant.name }}</td>
                <td>{{ extract_docs(variant) }}</td> {# TODO markdown #}
            </tr>
        {% endfor %}
    </table>
{% endblock %}
